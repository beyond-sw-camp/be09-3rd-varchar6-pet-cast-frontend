<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.varchar6.petcast.serviceothers.domain.request.query.mapper.RequestsMapper">
    <!--     =======================================================================================  -->
    <!--     =======================================================================================  -->
    <!--     =======================================================================================  -->
    <!--     카테고리 목록 조회 -->
    <select id="selectCategoryList" resultType="_int">
        SELECT A.category_id
        FROM tbl_request_category A
    </select>
    <!--     =======================================================================================  -->
    <!--  고객 요청서 목록 조회  -->
    <resultMap id="selectAllRequestsByMemberIdResultMap" type="com.varchar6.petcast.serviceothers.domain.request.query.dto.MemberAndRequestDTO">
        <result property="nickname" column="nickname"/>
        <collection property="requests" ofType="com.varchar6.petcast.serviceothers.domain.request.query.dto.RequestDTO">
            <result property="content" column="content"/>
            <result property="createdAt" column="created_at"/>
            <result property="status" column="status"/>
            <result property="categoryId" column="category_id" javaType="Integer"/>
        </collection>
    </resultMap>
    <select id="selectAllRequestsByMemberId" resultMap="selectAllRequestsByMemberIdResultMap" parameterType="_int">
        SELECT
            A.nickname
          , B.content
          , B.created_at
          , B.status
          , C.category_id
        FROM tbl_member A
        JOIN tbl_request B ON (A.id = B.member_id)
        LEFT JOIN tbl_request_category C ON B.id = C.request_id
        WHERE A.id = #{user_id}
        ORDER BY B.created_at DESC
    </select>
    <!--     업체 요청서 목록 조회      -->
    <resultMap id="selectAllRequestsByCompanyIdResultMap" type="com.varchar6.petcast.serviceothers.domain.request.query.dto.CompanyAndRequestDTO">
        <result property="company" column="name"/>
        <collection property="requests" ofType="com.varchar6.petcast.serviceothers.domain.request.query.dto.RequestDTO">
            <result property="content" column="content"/>
            <result property="createdAt" column="created_at"/>
            <result property="status" column="status"/>
            <result property="categoryId" column="category_id" javaType="Integer"/>
        </collection>
    </resultMap>
    <select id="selectAllRequestsByCompanyId" resultMap="selectAllRequestsByCompanyIdResultMap" parameterType="_int">
        SELECT
                C.name
              , A.content
              , A.created_at
              , A.status
               ,B.category_id
        FROM tbl_request A JOIN tbl_company C ON A.company_id = C.id
        LEFT JOIN tbl_request_category B ON A.id = B.request_id
        WHERE A.company_id = #{company_id} ORDER BY A.created_at DESC
    </select>
    <!--     &lt;!&ndash;    ======================================================================================= &ndash;&gt; -->
    <!--     &lt;!&ndash; 고객 특정 요청서 조회 &ndash;&gt; -->
    <resultMap id="selectRequestByIdResultMap" type="com.varchar6.petcast.serviceothers.domain.request.query.dto.RequestDTO">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="hopeCost" column="hope_cost"/>
        <result property="hopeLocation" column="hope_location"/>
        <result property="hopeTime" column="hope_time"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="active" column="active"/>
        <result property="companyId" column="company_id"/>
        <result property="memberId" column="member_id"/>
        <result property="categoryId" column="category_id" javaType="Integer"/>
    </resultMap>
    <select id="selectRequestById" resultMap="selectRequestByIdResultMap" parameterType="_int">
        SELECT
              A.content
            , B.category_id
            , A.hope_cost
            , A.hope_location
            , A.hope_time
            , A.status
            , A.created_at
            , A.updated_at
            , A.active
            , A.company_id
            , A.member_id
        FROM tbl_request A
        LEFT JOIN tbl_request_category B ON A.id = B.request_id
        WHERE A.id = #{request_id}
    </select>
</mapper>